@model Senzo.Models.Category

    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-whiet py-2">Edit Category</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form method="post" class="row">
                <input asp-for="Id" hidden />
                <div class="border p-3 mt-4">

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Name" type="text" class=" p-0 form-control border-0 shadow" />
                        <label class="ms-2" asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="DisplayOrder" type="text" class="p-0 form-control border-0 shadow" />
                        <label class=" ms-2" asp-for="DisplayOrder">Display Order</label>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to List</a>

                        </div>
                    </div>
                </div>
            </form>


        </div>
    </div>

    <!--client side validtion-->

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }